generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FocusSession {
  id            String    @id @default(cuid())
  duration      Int
  actualTime    Int       @default(0)
  startedAt     DateTime
  endedAt       DateTime?
  completed     Boolean   @default(false)
  interrupted   Boolean   @default(false)
  timeLeft      Int?      // ë‚¨ì€ ì‹œê°„ (ì´ˆ)
  timerState    String?   // "running", "paused", "idle"
  lastUpdatedAt DateTime? // ë§ˆì§€ë§‰ ì—…ë°ì´íŠ¸ ì‹œê°„
  taskId        String?
  userId        String
  createdAt     DateTime  @default(now())
  Task          Task?     @relation(fields: [taskId], references: [id])
  User          User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([taskId])
  @@index([userId, startedAt])
  @@index([userId, timerState])
}

model Goal {
  id          String      @id @default(cuid())
  title       String
  description String?
  targetDate  DateTime?
  status      String      @default("active")
  color       String      @default("#3B82F6")
  order       Int         @default(0)
  userId      String
  lifeGoalId  String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  User        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  LifeGoal    LifeGoal?   @relation(fields: [lifeGoalId], references: [id])
  Milestone   Milestone[]
  Task        Task[]

  @@index([userId, status])
  @@index([lifeGoalId])
}

model Milestone {
  id          String    @id @default(cuid())
  title       String
  targetDate  DateTime
  completed   Boolean   @default(false)
  order       Int       @default(0)
  goalId      String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  completedAt DateTime?
  Goal        Goal      @relation(fields: [goalId], references: [id], onDelete: Cascade)

  @@index([goalId])
}

model Task {
  id               String         @id @default(cuid())
  title            String
  description      String?
  scheduledDate    DateTime?
  scheduledTime    String?        // "09:30" í˜•ì‹
  scheduledEndTime String?        // "11:00" í˜•ì‹
  priority         String         @default("mid")
  status           String         @default("todo")
  order            Int            @default(0)
  weight           Int            @default(1) // ëª©í‘œ ê¸°ì—¬ë„ (1-100, ê¸°ë³¸ê°’ 1)
  isFromRoutine    Boolean        @default(false) // ë£¨í‹´ì—ì„œ ìë™ ìƒì„±ëœ ì‘ì—…
  routineId        String?        // ì—°ê²°ëœ ë£¨í‹´ ID
  userId           String
  goalId           String?
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  completedAt      DateTime?
  deletedAt        DateTime?      // ì†Œí”„íŠ¸ ì‚­ì œ
  FocusSession     FocusSession[]
  Goal             Goal?          @relation(fields: [goalId], references: [id])
  Routine          Routine?       @relation(fields: [routineId], references: [id], onDelete: SetNull)
  User             User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([goalId])
  @@index([userId, status, scheduledDate])
  @@index([userId, deletedAt])
  @@index([routineId])
}

model Routine {
  id             String   @id @default(cuid())
  title          String
  description    String?
  recurrenceType String   @default("daily") // daily, weekly, monthly
  recurrenceDays String?  // JSON array: "[0,1,2,3,4,5,6]" for days of week
  timeOfDay      String?  // "09:00" format
  duration       Int?     // minutes
  priority       String   @default("mid")
  active         Boolean  @default(true)
  userId         String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  User           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  Task           Task[]
  RoutineCheck   RoutineCheck[]
  RoutineResult  RoutineResult[]

  @@index([userId, active])
}

model RoutineCheck {
  id        String   @id @default(cuid())
  date      DateTime // ì™„ë£Œí•œ ë‚ ì§œ (YYYY-MM-DD 00:00:00)
  routineId String
  userId    String
  createdAt DateTime @default(now())
  Routine   Routine  @relation(fields: [routineId], references: [id], onDelete: Cascade)
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([routineId, userId, date])
  @@index([userId, date])
}

model RoutineResult {
  id        String   @id @default(cuid())
  date      DateTime // ì™„ë£Œ ê²°ê³¼ ë‚ ì§œ (YYYY-MM-DD 00:00:00)
  status    String   // success | failed
  routineId String
  userId    String
  createdAt DateTime @default(now())
  Routine   Routine  @relation(fields: [routineId], references: [id], onDelete: Cascade)
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([routineId, userId, date])
  @@index([userId, date])
}

model User {
  id             String         @id @default(cuid())
  email          String         @unique
  username       String         @unique
  passwordHash   String
  name           String?
  birthDate      DateTime?      // ìƒë…„ì›”ì¼
  targetLifespan Int?           // ëª©í‘œ ìˆ˜ëª… (ë‚˜ì´)
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  FocusSession   FocusSession[]
  Goal           Goal[]
  Task           Task[]
  Routine        Routine[]
  RoutineCheck   RoutineCheck[]
  RoutineResult  RoutineResult[]
  LifeGoal       LifeGoal[]
}

model LifeGoal {
  id          String   @id @default(cuid())
  title       String
  description String?
  category    String   @default("custom") // health, wealth, learning, career, relationship, creativity, contribution, custom
  icon        String   @default("ğŸŒŸ")
  color       String   @default("#8B5CF6")
  order       Int      @default(0)
  active      Boolean  @default(true)
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  User        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  Goal        Goal[]

  @@index([userId, active])
}
